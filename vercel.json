{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "buildCommand": "npx prisma generate",
  "crons": [
    {
      "path": "/api/cron/ping-db",
      "schedule": "0 12 * * 1"
    }
  ]
}